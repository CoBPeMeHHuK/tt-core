{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
            "vue"
        ],
        "paths": {
            "~@/ui/uikit/*": [
                "titify/src"
            ],
            "@/*": [
                "src/*"
            ],
        },
        "plugins": [
            {
                "transform":"@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
