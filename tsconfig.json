{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "declaration": true,
      "declarationDir": "dist/types",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
          "node",
          "vue"
      ],
      "paths": {
        "@/entry.esm": [
          "src/entry.esm"
        ],
        "@/lib-components/*": [
          "src/lib-components/*"
        ],
        "@/*": [
          "titify/src/*"
        ],
        "@uikit/components/*": [
            "titify/src/ui/uikit/components/*"
          ],
        "@uikit/themes/*": [
            "titify/src/ui/uikit/themes/*"
          ],
          "@uikit/locales/*": [
            "titify/src/ui/uikit/locales/*"
          ],

        "@uikit/*": [
            "titify/src/ui/uikit/*"
          ],
        "*": [
          "types/*"
        ],

        "@widgets/*": [
          "titify/src/ui/widgets/*"
        ],
        "@views/*": [
          "titify/src/ui/views/*"
        ],
        "@testing/*": [
          "tests/*"
        ]
      },
      "plugins": [
        {
          "transform":"@zerollup/ts-transform-paths",
          "exclude": ["*"]
      }
      ],
      "lib": [
          "esnext",
          "dom",
          "dom.iterable",
          "scripthost"
      ]
  },
  "exclude": [
      "node_modules",
      "dist"
  ]
}
